{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./public/",
    "jsx": "react",
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
